import requests
import json
from datetime import datetime

# Configuration
BASE_URL = "http://localhost:8000"
HEADERS = {"Content-Type": "application/json"}

def test_api_health():
    """Test API health check"""
    print("ğŸ” Testing API Health Check...")
    try:
        response = requests.get(f"{BASE_URL}/health")
        if response.status_code == 200:
            data = response.json()
            print(f"âœ… API Status: {data['status']}")
            print(f"ğŸ¤– AI System: {'Available' if data['ai_system_available'] else 'Not Available'}")
            print(f"ğŸ§  Models: {'Loaded' if data['models_loaded'] else 'Not Loaded'}")
            print(f"ğŸ’¬ Chat: {'Available' if data['chat_available'] else 'Not Available'}")
            return True
        else:
            print(f"âŒ Health check failed: {response.status_code}")
            return False
    except Exception as e:
        print(f"âŒ Health check error: {str(e)}")
        return False

def test_model_status():
    """Test model status endpoint"""
    print("\nğŸ” Testing Model Status...")
    try:
        response = requests.get(f"{BASE_URL}/model-status")
        if response.status_code == 200:
            data = response.json()
            print(f"âœ… Models Available: {data['models_available']}")
            print(f"ğŸ’¬ Chat Model: {'Available' if data['chat_model_available'] else 'Not Available'}")
            if 'model_details' in data:
                print("ğŸ“Š Model Details:")
                for model_name, details in data['model_details'].items():
                    print(f"  - {model_name}: {details['algorithm']} (Accuracy: {details['accuracy']})")
            return True
        else:
            print(f"âŒ Model status failed: {response.status_code}")
            return False
    except Exception as e:
        print(f"âŒ Model status error: {str(e)}")
        return False

def test_simple_prediction():
    """Test simple prediction endpoint"""
    print("\nğŸ” Testing Simple Prediction...")
    
    test_data = {
        "age": 28,
        "gestational_age": 32.0,
        "weight_pre_pregnancy": 65.0,
        "height": 165.0,
        "systolic_bp": 125,
        "diastolic_bp": 80
    }
    
    try:
        response = requests.post(f"{BASE_URL}/predict-simple", 
                               json=test_data, headers=HEADERS)
        if response.status_code == 200:
            data = response.json()
            print("âœ… Simple prediction successful!")
            print(f"ğŸ“Š Predictions available: {len(data['predictions'])}")
            print(f"ğŸ’¡ Recommendations: {len(data['recommendations'])}")
            
            # Show key predictions
            if 'risk_level' in data['predictions']:
                risk = data['predictions']['risk_level']
                print(f"ğŸ¯ Risk Level: {risk['prediction']} (Confidence: {risk['confidence']:.2f})")
            
            return True
        else:
            print(f"âŒ Simple prediction failed: {response.status_code}")
            print(f"Response: {response.text}")
            return False
    except Exception as e:
        print(f"âŒ Simple prediction error: {str(e)}")
        return False

def test_comprehensive_prediction():
    """Test comprehensive prediction endpoint"""
    print("\nğŸ” Testing Comprehensive Prediction...")
    
    test_data = {
        "age": 32,
        "gestational_age": 28.0,
        "weight_pre_pregnancy": 70.0,
        "height": 168.0,
        "systolic_bp": 135,
        "diastolic_bp": 85,
        "glucose_fasting": 95.0,
        "hemoglobin": 10.5,
        "previous_pregnancies": 1,
        "diabetes_history": 0,
        "hypertension_history": 0,
        "smoking": 0,
        "exercise_level": 2,
        "stress_level": 3,
        "folic_acid_intake": 1,
        "prenatal_vitamins": 1
    }
    
    try:
        response = requests.post(f"{BASE_URL}/predict", 
                               json=test_data, headers=HEADERS)
        if response.status_code == 200:
            data = response.json()
            print("âœ… Comprehensive prediction successful!")
            print(f"ğŸ“Š Predictions: {len(data['predictions'])}")
            print(f"ğŸ’¡ Recommendations: {len(data['recommendations'])}")
            print(f"ğŸ“š Educational Resources: {len(data['educational_resources'])}")
            
            # Show sample predictions
            for pred_name, pred_data in list(data['predictions'].items())[:3]:
                if 'prediction' in pred_data:
                    print(f"  - {pred_name}: {pred_data['prediction']} ({pred_data['algorithm_used']})")
            
            return True
        else:
            print(f"âŒ Comprehensive prediction failed: {response.status_code}")
            print(f"Response: {response.text}")
            return False
    except Exception as e:
        print(f"âŒ Comprehensive prediction error: {str(e)}")
        return False

def test_chat():
    """Test chat endpoint"""
    print("\nğŸ” Testing Chat Functionality...")
    
    test_messages = [
        "Hello, I'm 28 weeks pregnant and feeling anxious",
        "What should I eat during my second trimester?",
        "I'm experiencing some back pain, is this normal?",
        "Tell me about gestational diabetes",
        "I have severe bleeding and chest pain"  # Emergency test
    ]
    
    for i, message in enumerate(test_messages, 1):
        print(f"\nğŸ’¬ Test {i}: {message[:50]}...")
        
        chat_data = {
            "message": message,
            "user_id": f"test_user_{i}"
        }
        
        try:
            response = requests.post(f"{BASE_URL}/chat", 
                                   json=chat_data, headers=HEADERS)
            if response.status_code == 200:
                data = response.json()
                print(f"âœ… Response: {data['response'][:100]}...")
                if data.get('emergency'):
                    print("ğŸš¨ Emergency detected!")
                if data.get('intent'):
                    print(f"ğŸ¯ Intent: {data['intent']} (Confidence: {data.get('confidence', 0):.2f})")
                if data.get('suggestions'):
                    print(f"ğŸ’¡ Suggestions: {len(data['suggestions'])}")
            else:
                print(f"âŒ Chat failed: {response.status_code}")
        except Exception as e:
            print(f"âŒ Chat error: {str(e)}")
    
    return True

def test_integrated_consultation():
    """Test integrated consultation endpoint"""
    print("\nğŸ” Testing Integrated Consultation...")
    
    consultation_data = {
        "message": "How am I doing? Should I be worried about anything?",
        "user_id": "test_user",
        "health_data": {
            "age": 30,
            "gestational_age": 35.0,
            "weight_pre_pregnancy": 68.0,
            "height": 165.0,
            "systolic_bp": 140,
            "diastolic_bp": 90,
            "glucose_fasting": 110.0,
            "hemoglobin": 10.0,
            "stress_level": 4
        }
    }
    
    try:
        response = requests.post(f"{BASE_URL}/integrated-consultation", 
                               json=consultation_data, headers=HEADERS)
        if response.status_code == 200:
            data = response.json()
            print("âœ… Integrated consultation successful!")
            print(f"ğŸ’¬ Chat Response: {data['chat_response'][:100]}...")
            
            if data['prediction_results']:
                print(f"ğŸ“Š Predictions available: {len(data['prediction_results'])}")
            
            if data['health_recommendations']:
                print(f"ğŸ’¡ Recommendations: {len(data['health_recommendations'])}")
                print(f"  Top recommendation: {data['health_recommendations'][0][:80]}...")
            
            if data['clinical_insights']:
                print(f"ğŸ” Clinical insights: {len(data['clinical_insights'])}")
                
            return True
        else:
            print(f"âŒ Integrated consultation failed: {response.status_code}")
            print(f"Response: {response.text}")
            return False
    except Exception as e:
        print(f"âŒ Integrated consultation error: {str(e)}")
        return False

